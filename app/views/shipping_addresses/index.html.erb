 <div class='container'>
    <div class='row'>
      <div class='col-xs-12'>
        <div class='col-xs-4'>
          <h2><i class="fa fa-truck"></i>配送先登録/一覧</h2>
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-8'>
          <% if flash[:alert] %>
            <div>
              <%= flash[:alert] %>
            </div>
          <% end %>
          <div class="table table-borderless">
            <%= form_for(@shipping_address) do |f| %>
            <div class="col-xs-offset-1 col-xs-11">
              <%= f.label '郵便番号(ハイフンなし)' %>
              <%= f.text_field :postcode %>
            </div>
            <div class='col-xs-offset-1 col-xs-11'>
              <%= f.label "住所" %>
              <%= f.text_field :address %>
            </div>
            <div class='col-xs-offset-1 col-xs-11'>
              <%= f.label '宛名' %>
              <%= f.text_field :receiver %>
            </div>
            <div class='col-xs-offset-11 col-xs-1'>
            <%= f.submit '登録する', class:"col-xs btn btn-primary"%>
          </div>
          <% end %>
          </div>
        </div>
      </div>

      <div class='row'>
        <div class='col-xs-11'>
          <table class='table table-hover table-bordered'>
            <thead>
              <tr class='active'>
                <th class='col-xs-4'>郵便番号</th>
                <th class='col-xs-3'>住所</th>
                <th class='col-xs-3'>宛名</th>
                <th class='col-xs-2'></th>
                <th class='col-xs-2'></th>
              </tr>
            </thead>
            <% @shipping_addresses.each do |shipping_address| %>
            <tbody>
              <tr>
                <td><%=shipping_address.postcode %></td>
                <td><%=shipping_address.address %></td>
                <td><%=shipping_address.receiver%></td>
                <td>
                    <%= link_to "編集する", edit_shipping_address_path(shipping_address.id),class:'btn btn-success'%>
                  </button>
                </td>
                <td>
                    <%= link_to "削除する", shipping_address_path(shipping_address.id), method: :delete ,class:'btn btn-danger'%>
                  </button>
                </td>
              </tr>
           </tbody>
         <% end %>
        </table>
      </div>
    </div>
  </div>
</div>


