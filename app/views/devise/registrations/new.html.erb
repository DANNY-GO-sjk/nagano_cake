<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label "姓" %><br />
    <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
  </div>
  <div class="field">
    <%= f.label "名" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>
  <div class="field">
    <%= f.label "セイ" %><br />
    <%= f.text_field :family_name_yomi, autofocus: true, autocomplete: "family_name_yomi" %>
  </div>

  <div class="field">
    <%= f.label "メイ" %><br />
    <%= f.text_field :first_name_yomi, autofocus: true, autocomplete: "first_name_yomi" %>
  </div>
  <div class="field">
    <%= f.label "郵便番号" %><br />
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
  </div>
  <div class="field">
    <%= f.label "住所" %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
  <div class="field">
    <%= f.label "電話番号" %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "address" %>
  </div>
  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規会員登録",class: "btn-sm btn-success" %>
  </div>
<% end %>
<h2>既に登録済みの方</h2>
<%= render "devise/shared/links" %> からログインしてください。
