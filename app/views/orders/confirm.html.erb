<%# FIX: 消費税の定義 本当は他の場所で定義したい %>
<% CONSUMPTION_TAX = 1 + 0.8 %>

<h2>注文入力確認</h2>
<div class="row">
  <div class="col-xs-8">
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <%= current_user.cart_items.each do |cart_item| %>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.price * CONSUMPTION_TAX %></td>
        <td><%= cart_item.how_many %></td>
        <td><%= cart_item.item.price * CONSUMPTION_TAX * cart_item.how_many %></td>
      </tbody>
    </table>
  </div>
  <div class="col-xs-4">
  </div>
</div>
<%= debug(params) if Rails.env.development? %>