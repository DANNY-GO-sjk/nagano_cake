<h1>商品一覧</h1>
<table class="table table-bordered">
  <thead>
    <th>ジャンル検索</th>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to genre.name, items_path(genre: genre.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% @items.each do |item| %>
  <div class='thumbnail'>
    <%= link_to item_path(item) do %>
      <%= attachment_image_tag item, :image,:fill,500,400 %>
      <div class='caption'>
        <label><%= item.name %></label>
        <p><%= item.tax_included_price(item.price) %>(税込)</p>
      </div>
    <% end %>
  </div>
<% end %>

