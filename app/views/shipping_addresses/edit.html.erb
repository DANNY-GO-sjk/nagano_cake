<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>配送先編集</h2>
      <% if flash[:alert] %>
        <div>
          <%= flash[:alert] %>
        </div>
      <% end %>
        <div class="">
        <%= form_for(@shipping_address) do |f| %>
          <table class='edit_table'>
          <tr>
            <td><%= f.label '郵便番号' %></td>
            <td><%= f.text_field :postcode,class: "form-control"%></td>
          </tr>
          <tr>
            <td><%= f.label '住所' %></td>
            <td><%= f.text_field :address ,class: "form-control"%></td>
          </tr>
          <tr>
            <td><%= f.label '住所宛名' %></td>
            <td><%= f.text_field :receiver ,class: "form-control"%></td>
          </tr>
        </table>
        </div>
    </div>
    <div class='col-xs-offset-7 col-xs-5'>
      <%= f.submit '編集する',class: "btn btn-primary"%>
    </div>
    <% end %>
  </div>
</div>