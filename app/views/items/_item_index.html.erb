<% items.each do |item| %>
    <div class='col-xs-12 col-sm-3'>
      <div class="thumbnail">
        <%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image, :fill, 300, 300 %>
          <div class='caption'>
            <label><%= item.name %></label>
            <p><%= item.tax_included_price(item.price) %>(税込)</p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

