<h1>マイページ</h1>
<h2>登録情報</h2>
<%= link_to "編集する",edit_user_path(current_user),class: "btn-sm btn-success" %>
<%= link_to "パスワードを変更する",class: "btn-sm btn-success" %>
	<table class="table table-bordered">
		<tbody>
			<tr>
				<th>氏名</th>
				<th><%= @user.family_name %></th>
			</tr>
			<tr>
				<th>カナ</th>
				<th><%= @user.family_name_yomi %></th>
			</tr>
			<tr>
				<th>郵便番号</th>
				<th><%= @user.postcode %></th>
			</tr>
			<tr>
				<th>電話番号</th>
				<th><%= @user.phone_number %></th>
			</tr>
			<tr>
				<th>メールアドレス</th>
				<th><%= @user.email %></th>
			</tr>
		</tbody>
	</table>
<h2>配送先</h2>
<%= link_to '一覧を見る',shipping_addresses_path,class: "btn-sm btn-success" %>
<h2>注文履歴</h2>
<%= link_to '一覧を見る',orders_path,class: "btn-sm btn-success" %>

