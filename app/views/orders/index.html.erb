<h2><i class="fa fa-table"></i>注文履歴一覧</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td>
          <div><%= order.postcode %></div>
          <div><%= order.address %></div>
          <div><%= order.receiver %></div>
        </td>
        <td>
          <ul>
            <% order.order_items.each do |order_item| %>
              <li><%= order_item.item.name %></li>
            <% end %>
          </ul>
        </td>
        <td><%= order.total_price %>円</td>
        <td><%= order.progress %></td>
        <td><%= link_to "表示する", order_path(order),class:'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>