<h1>商品詳細</h1>
<div class="genre">
  <h4 class="genre-search">ジャンル検索</h4>
  <% @genres.each do |genre| %>
    <p><%= link_to genre.name %></p>
  <% end %>
</div>

<div class="item-box">
  <div class="item-image">
    <%= attachment_image_tag @item, :image, :fill, 500, 350, fallback: "no_image.jpg", size: "300x200" %>
  </div>
  <h2><%= @item.name %></h2>
  <p><%= @item.explanation %></p><br>
  <p>¥<%= @item.tax_included_price(@item.price) %>(税込)</p>
</div>

<%= form_for(@cart_item, url:"/cart_items") do |f| %>
<%= f.number_field :how_many %>
<%= f.hidden_field :item_id, :value => @item.id %>
<%= f.submit 'カートに入れる', class: 'btn btn-primary' %>
<% end %>
