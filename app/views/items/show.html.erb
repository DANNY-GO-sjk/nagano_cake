<h1>商品詳細</h1>
<div class="genre">
  <h4 class="genre-search">ジャンル検索</h4>
  <% @genres.each do |genre| %>
    <p><%= link_to genre.name %></p>
  <% end %>
</div>

<div class="item-box">
  <div class="item-image">
    <%= attachment_image_tag @item, :image, :fill, 500, 350, fallback: "no_image.jpg", size: "300x200" %>
  </div>
  <h2><%= @item.name %></h2>
  <p><%= @item.explanation %></p><br>
  <p>¥<%= @item.tax_included_price(@item.price).floor %>(<%= @item.price %>)(税込)</p>
</div>
<!-- 個数選択未実装 -->

<%= button_to 'カートに入れる', cart_items_path(item_id: @item), class: 'btn btn-primary' %>
