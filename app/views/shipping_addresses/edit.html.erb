<div class="row">
  <div class="col-xs-12" id="edit-shipping-address">
    <% if flash[:alert] %>
      <div class="row alert alert-warning">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <div class="form-wrapper">
      <%= form_for(@shipping_address) do |f| %>
        <h2><i class="fa fa-truck"></i>配送先編集</h2>
        <div class="row row-form">
          <div class="col-xs-4">
            <%= f.label '郵便番号' %>
          </div>
          <div class="col-xs-8">
            <%= f.text_field :postcode, class: "form-control" %>
          </div>
        </div>
        <div class="row row-form">
          <div class="col-xs-4">
            <%= f.label '住所' %>
          </div>
          <div class="col-xs-8">
            <%= f.text_field :address , class: "form-control", size: "50" %>
          </div>
        </div>
        <div class="row row-form">
          <div class="col-xs-4">
            <%= f.label '住所宛名' %>
          </div>
          <div class="col-xs-8">
            <%= f.text_field :receiver , class: "form-control" %>
          </div>
        </div>
        <div class="f-right">
          <%= f.submit '編集する', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>