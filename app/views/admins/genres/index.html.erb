<h2>ジャンル一覧・追加<h2>

<%= form_for(@genre, url:'/admins/genres') do |f| %>

<%= f.label :name, "ジャンル" %>
<%= f.text_area :name %>

<%= f.radio_button :is_valid, :有効 %>
<%= f.label :有効 %>
<%= f.radio_button :is_valid, :無効 %>
<%= f.label :無効 %>

<%= f.submit "追加" %>
<% end %>

<table>
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @genres.each do |genre| %>
		<tr>
			<td><%= genre.name %></td>
			<td><%= genre.is_valid %></td>
			<td><%= link_to "編集する", edit_admins_genre_path(genre.id) %></td>
		</tr>
		<% end %>
	</tbody>
</table>