<h2><i class="fa fa-truck"></i>配送先登録/一覧</h2>
<% if flash[:alert] %>
  <div>
    <%= flash[:alert] %>
  </div>
<% end %>
<%= form_for(@shipping_address) do |f| %>
  <div class="row row-form">
    <div class="col-md-3">
      <%= f.label '郵便番号(ハイフンなし)' %>
    </div>
    <div class="col-md-9">
      <%= f.text_field :postcode, class: "form-control" %>
    </div>
  </div>
  <div class="row row-form">
    <div class="col-md-3">
      <%= f.label "住所"%>
    </div>
    <div class="col-md-9">
      <%= f.text_field :address, class: "form-control", size: "50" %>
    </div>
  </div>
  <div class="row row-form">
    <div class="col-md-3">
      <%= f.label '宛名' %>
    </div>
    <div class="col-md-9">
      <%= f.text_field :receiver, class: "form-control" %>
    </div>
  </div>
  <%= f.submit '登録する', class:"col-xs btn btn-primary"%>
<% end %>
<div class="table-wrapper">
  <table class='table table-hover table-bordered'>
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <% @shipping_addresses.each do |shipping_address| %>
      <tbody>
        <tr>
          <td><%=shipping_address.postcode %></td>
          <td><%=shipping_address.address %></td>
          <td><%=shipping_address.receiver%></td>
          <td>
              <%= link_to "編集する", edit_shipping_address_path(shipping_address.id),class:'btn btn-success'%>
            </button>
          </td>
          <td>
              <%= link_to "削除する", shipping_address_path(shipping_address.id), method: :delete ,class:'btn btn-danger'%>
            </button>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>
