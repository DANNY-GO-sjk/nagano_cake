<h1>商品詳細</h1>
<table class="table table-bordered">
  <%= render 'genres/serch', genres: @genres %>
</table>
<div class="item-box">
  <div class="item-image">
    <%= attachment_image_tag @item, :image, :fill, 500, 350, fallback: "no_image.jpg", size: "300x200" %>
  </div>
  <h2><%= @item.name %></h2>
  <p><%= @item.explanation %></p><br>
  <p>¥<%= @item.tax_included_price(@item.price) %>(税込)</p>
</div>
<%= form_with model: @cart_item, url: cart_items_path, local: true do |f| %>
  <%= f.select :how_many, options_for_select(1..10), include_blank: "個数選択" %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :item_id, value: @item.id %>
  <%= f.submit 'カートに入れる', class: 'btn btn-primary' %>
<% end %>