<div class="row">
  <div class="col-xs-4">
    <h2>ショッピングカート</h2>
    <%= link_to "テスト用/ケーキをカートに追加", cart_items_path, method: :post %>
  </div>
  <div class="col-xs-offset-6 col-xs-2">
    <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger" %>
  </div>
</div>
<% total_price = 0 %><%#= FIX: 仮設置 %>
<div class="row">
  <div class='col-xs-8'></div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th class="col-xs-4">商品名</th>
        <th class="col-xs-2">単価（税込み）</th>
        <th class="col-xs-2">数量</th>
        <th class="col-xs-2">小計</th>
        <th class="col-xs-2"></th>
      </tr>
    </thead>

    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.unit_price %></td>
          <td>
            <%= form_with model: cart_item do |f| %>
              <%= f.number_field :how_many %>
              <%= f.submit '変更',class: "btn-sm btn-info" %>
            <% end %>
          </td>
          <td><%= cart_item.subtotal_price %>円</td>
          <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete,class: "btn btn-danger" %></td>
        </tr>
        <% total_price += cart_item.subtotal_price %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col-xs-2">
    <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
  </div>
  <div class="col-xs-offset-6 col-xs-4">
    <table class="table table-bordered">
      <tr>
        <th>合計金額</th>
        <td><%= total_price %>円</td>
      </tr>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-xs-offset-4 col-xs-4">
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
    <% if flash[:alert] %>
      <div>
        <%= flash[:alert] %>
      </div>
    <% end %>
  </div>
</div>