<div class='row'>
	<h2>商品一覧</h2>
	<div class='col-xs-offset-10'>
		<%= link_to new_admins_item_path do %>
		<h4>商品追加<span class="glyphicon glyphicon-plus" aria-hidden="true"></span></h4>
		<% end %>
	</div>
	<table class='table'>
		<thead>
			<tr>
				<th>商品ID</th>
				<th>商品名</th>
				<th>税抜価格</th>
				<th>ジャンル</th>
				<th>ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% @items.each do |item| %>
				<tr>
					<td><%= item.id %></td>
					<td><%= link_to item.name, admins_item_path(item.id) %></td>
					<td><%= item.price %></td>
					<!-- item.genre_idのname -->
					<td><%= item.genre.name %></td>
					<td><%= item.is_valid %></td>
				</tr>
			<% end %>
			<%= paginate @items %>
		</tbody>
	</table>
</div>