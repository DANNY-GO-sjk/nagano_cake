<div class='row'>
</div>
<div class='row'>
  <div class='col-xs-5'>
    <%= form_for(item, url:"/admins/items/#{item.id}") do |f| %>
      <%= f.label :image, class: 'image_label' do %>
        <div class="prev-content">
          <%= attachment_image_tag item, :image, :fill, 300, 200, fallback: "no_image.png", size:'300x200', class: "prev-image" %>
        </div>
      <% end %>
      <%= f.attachment_field :image %>
    </div>
    <div class='col-xs-7'>
      <div class='row'>
        <div class='col-xs-4'>
          <%= f.label :name, "商品名" %>
        </div>
        <div class='col-xs-5'>
          <%= f.text_field :name %>
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-4'>
          <%= f.label :explanation, "商品説明" %>
        </div>
        <div class='col-xs-5'>
          <%= f.text_area :explanation %>
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-4'>
          <%= f.label :genre, "ジャンル" %>
        </div>
        <div class='col-xs-5'>
          <%= f.collection_select :genre_id, Genre.all, :id, :name %>
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-4'>
          <%= f.label :price, "税抜価格" %>
        </div>
        <div class='col-xs-5'>
          <%= f.text_field :price %>
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-4'>
          <%= f.label :is_valid, "販売ステータス" %>
        </div>
        <div class='col-xs-5'>
          <%= f.select :is_valid, Item.is_valids.keys.map {|k| [k,k]}, {} %>
        </div>
      </div>
      <div class='row'>
        <%= f.check_box :recommended, {}, Time.zone.now, nil %>
        <%= f.label :recommended, 'オススメ商品に表示する' %>
      </div>
      <%= f.submit submit_text %>
    <% end %>
    <% if flash[:alert] %>
      <div class="row alert alert-warning">
          <%= flash[:alert] %>
      </div>
    <% end %>
  </div>
  <%= javascript_include_tag 'admins/image_preview.js' %>
</div>
