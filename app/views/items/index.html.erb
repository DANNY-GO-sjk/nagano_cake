<h1>商品一覧</h1>
<p>(全<%= @items.count %>件)</p>
<table class="table table-bordered">
  <%= render 'genres/search', genres: @genres %>
</table>

  <% @items.each do |item| %>
    <div class='thumbnail'>
      <%= link_to item_path(item), class: "item_#{item.id}_show" do %>
        <%= attachment_image_tag item, :image,:fill,500,400 %>
        <div class='caption'>
          <label><%= item.name %></label>
          <p><%= item.tax_included_price(item.price) %>(税込)</p>
        </div>
      <% end %>
    </div>
  <% end %>

<div style="text-align: center;">
  <%= paginate @items %>
</div>

