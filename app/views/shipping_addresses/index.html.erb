<h2>配送先登録/一覧</h2>
<%= form_for(@shipping_address) do |f| %>
  <div class='field row'>
    <%= f.label '郵便番号(ハイフンなし)' %>
    <%= f.text_field :postcode %>
  </div>
  <div class='field row'>
    <%= f.label "住所" %>
    <%= f.text_field :address %>
  </div>
  <div class='field row'>
    <%= f.label '宛名' %>
    <%= f.text_field :receiver %>
  </div>
  <%= f.submit '登録する', class:"col-xs btn btn-primary"%>
<% end %>

<table class='table table-hover mt-4'>
  <tbody>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
      <th></th>
    </tr>
    <% @shipping_addresses.each do |shipping_address| %>
      <tr>
        <td><%=shipping_address.postcode %></td>
        <td><%=shipping_address.address %></td>
        <td><%=shipping_address.receiver%></td>
        <td>
          <button type="button" class="btn btn-success btn-sm">
            <%= link_to "編集する", edit_shipping_address_path(shipping_address.id)%>
          </button>
        </td>
        <td>
          <button type="button" class="btn btn-danger btn-sm">
            <%= link_to "削除する", shipping_address_path(shipping_address.id), method: :delete %>
          </button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>