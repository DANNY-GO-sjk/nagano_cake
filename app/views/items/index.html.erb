<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <table class="table table-bordered">
       <%= render 'genres/search', genres: @genres %>
      </table>
    </div>
    <div class='col-xs-9'>
      <h1>商品一覧</h1>
      <p>(全<%= @items.count %>件)</p>
      <% @items.each do |item| %>

        <div class='thumbnail'>
        <%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image,:fill,500,400 %>
          <div class='caption'>
            <label><%= item.name %></label>
            <p><%= item.tax_included_price(item.price) %>(税込)</p>
          </div>
        <% end %>
      </div>
      <% end %>
      </div>
    </div>
  </div>




      <div style="text-align: center;">
        <%= paginate @items %>
      </div>
    
  </div>
</div>